citHeader("To cite package mvngGrAd in publications use:")
desc <- packageDescription("mvngGrAd")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
vers <- paste("R package version", desc$Version)
citEntry(entry="Manual",
title = "R package mvngGrAd: moving grid adjustment in plant breeding field trials",
author = personList(as.person("Frank Technow")),
year = year,
note = vers,
textVersion =
paste("Frank Technow", "(", year,
"). R package mvngGrAd: moving grid adjustment in plant breeding field trials. ",
vers, ".", sep=""))



